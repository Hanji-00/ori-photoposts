<% if logged_in? %>
  <span class="h5 mb-2 ml-5 p-2">最近の投稿</span>
  <p class="border-top mt-3"> </p>
  <div class="container mt-3">
    <div class="row">
      <% @comments.each do |comment| %>
        <div class="col-lg-4">
          <div>
            <%= image_tag(rails_blob_path(comment.image), class: "col-lg-12")%>
          </div>
          <div class="mt-2 ml-3">
            <img class="rounded-pill" src="<%= gravatar_url(@user, {size: 50}) %>" alt="" ><span class="ml-2"><%= link_to comment.content, comment %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <p class="border-bottom mt-2"> </p>
<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the Inspiration</h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>
<% end %>