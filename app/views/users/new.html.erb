<div class="row">
  <div class="col-sm-6 offset-sm-3 border border-info">
    <div class="text-center border-bottom border-info mt-4">
      <h1>新規登録</h1>
    </div>
    
    <div class="row">
      <div class="col-sm-10 offset-sm-1">
        
        <%= form_with(model: @user, local: true) do |f| %>
          <%= render "layouts/error_messages", model: f.object %>
          
          <div class="form-group mt-4 mb-4">
            <%= f.label :name, "名前  (Name)" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          
          <div class="form-group mb-4">
            <%= f.label :email, "メールアドレス  (Email)" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          
          <div class="form-group mb-4">
            <%= f.label :password, "パスワード  (Password)" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          
          <div class="form-group mb-4">
            <%= f.label :password_confirmation, "確認用パスワード  (Confirm)" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
          
          <div class="text-center">
            <%= f.submit "アカウント作成", class: "btn btn-primary rounded-pill p-3 mb-4" %>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>