<% if users.any? %>
<div class="card-deck justify-content-around">
  <div class="row">
    <% users.each do |user| %>
    <div class="mb-5 col-lg-3">
      <div class="card">
        <div class="text-center">
          <div>
            <img class="mt-3 rounded-circle" src="<%= gravatar_url(user, {size: 100}) %>" alt="">
            <p class="h4"><%= link_to user.name, user_path(user) %></p>
          </div>
          <div class="card-body">
            
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
  <%= paginate users %>
<% end %>