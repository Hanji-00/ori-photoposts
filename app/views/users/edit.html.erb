<div class="row">
  <div class="col-sm-6 offset-sm-3 border border-info">
    <div class="text-center border-bottom border-info mt-4">
      <h1>編集画面</h1>
    </div>
    
    <div class="row">
      <div class="col-sm-10 offset-sm-1">
        
        <%= form_with(model: @user, local: true) do |f| %>
          <%= render "layouts/error_messages", model: f.object %>
          
          <div class="form-group mt-4 mb-4">
            <%= f.label :name, "名前  (Name)" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          
          <div class="form-group mb-4">
            <%= f.label :introduction, "メッセージ" %>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
          
          <div class="text-center">
            <%= f.submit "編集完了", class: "btn btn-primary rounded-pill p-3 mb-4" %>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>