<% if users.any? %>
<div class="card-group">
  <div class="row">
    <% users.each do |user| %>
    <div style="width: 250px;">
      <div class="card mb-4 ml-1 mr-1">
        <div class="text-center">
          <div>
            <img class="mt-3 rounded-circle" src="<%= gravatar_url(user, {size: 100}) %>" alt="">
            <p class="h4 mt-2"><%= link_to user.name, user_path(user) %></p>
          </div>
          <div class="card-body pt-0">
            <div id="user-introduction" class="mt-2" style="height: 95px">
              <p class="border-top m-0"><span>:PRメッセージ</span><%= simple_format(user.introduction) %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
  <%= paginate users %>
<% end %>