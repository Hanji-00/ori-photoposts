<div class="contaier">
  <div class="row">
    <% comments.each do |comment| %>
      <div class="col-lg-6 mb-4">
        <div class="media border">
          <img class="rounded-pill ml-1 mr-1 mt-1" src="<%= gravatar_url(@user, {size: 70}) %>" alt="">
          <div class="media-body border-left">
            <p class="border-bottom text-right mr-2"><%= comment.created_at %></p>
            <p class="ml-2"><%= link_to comment.content, comment %></p>
          </div>
        </div>
        <div>
          <%= image_tag(rails_blob_path(comment.image), class: "col-lg-12 p-0") %>
        </div>
      </div>
    <% end %>
  </div>
</div>