<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <h1 class="text-center border-bottom">作品を投稿する</h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-8 offset-sm-2">
    
    <%= form_with(model: @photo, local: true) do |f| %>
    
      <div class="form-group">
        <%= f.label :name, "タイトル" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :image, "画像URL" %>
        <%= f.text_field :image, class: "form-control" %>
      </div>
      
    <% end %>
  </div>
</div>