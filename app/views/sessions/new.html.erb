<div class="row">
  <div class="col-sm-6 offset-sm-3 border border-info">
    <div class="text-center border-bottom border-info mt-4">
      <h1>ログイン</h1>
    </div>
    
    <div class="row">
      <div class="col-sm-10 offset-sm-1">
        
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
          
          <div class="form-group mt-4 mb-4">
            <%= f.label :email, "メールアドレス  (Email)" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          
          <div class="form-group mb-4">
            <%= f.label :password, "パスワード  (Password)" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          
          <div class="text-center">
            <%= f.submit "ログイン", class: "btn btn-primary rounded-pill p-3 pl-4 pr-4 mb-4" %>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>